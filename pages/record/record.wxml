<!--pages/Record/record.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">咳嗽测试 Cough Test </view>
</cu-custom>

<view class="solid-bottom text-lg padding">
        <text class="cuIcon-title text-blue">请点击下方的的开始按钮，并咳嗽三声 Please press the Start Button below and cough three times\n\n</text>
        <text class="cuIcon-title text-blue">请在尽可能安静的环境下进行录音 Please record your cough in a quiet environment</text>
  </view>
<view class="padding flex flex-direction">

  <button bindtap='startRecord' class="cu-btn bg-green lg">录音开始 Start</button>
</view>

<view class="padding flex flex-direction">
  <button bindtap='stopRecord' class="cu-btn bg-red lg">录音结束 End</button>
</view>
<view class="padding flex flex-direction">
  <button bindtap='playRecord' class="cu-btn bg-blue lg">播放录音 Play</button>
</view>
